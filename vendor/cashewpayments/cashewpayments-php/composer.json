{
    "name": "cashewpayments/cashewpayments-php",
    "description": "Cashewpayments SDK for PHP",
    "keywords": ["api", "client", "graphql", "payments", "cashewpayments", "rest", "sdk"],
    "type": "library",
    "homepage": "https://github.com/cashewpaymentsio/cashewpayments-php",
    "license": "MIT",
    "authors": [
        {
            "name": "mongkok",
            "email": "dani@cashewpayments.io",
            "homepage": "https://github.com/mongkok"
        }
    ],
    "support": {
        "docs": "https://php.cashewpayments.io",
        "source": "https://github.com/cashewpayments.io/cashewpayments-php",
        "issues": "https://github.com/cashewpayments.io/cashewpayments-php/issues"
    },
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "~6.0",
        "phpunit/phpunit": "^4.8.35 || ^5.7 || ^6.4 || ^7.0",
        "squizlabs/php_codesniffer": "*"
    },
    "suggest": {
        "guzzlehttp/guzzle": "Required for using Guzzle HTTP client"
    },
    "autoload": {
        "psr-4": {
            "Cashewpayments\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cashewpayments\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "coverage": [
            "phpunit --coverage-text"
        ],
        "phpcs": [
            "phpcs -s -p"
        ],
        "phpcbf": [
            "phpcbf -p"
        ],
        "analyse": [
            "phpstan analyse"
        ],
        "fix": [
            "php-cs-fixer fix"
        ]
    }
}
